<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".jadwalku.AddNewMyScheduleActivity"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/labelScheduleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelScheduleName"
        />

    <EditText
        android:id="@+id/ETScheduleName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/labelScheduleDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelScheduleDescription"
        />

    <EditText
        android:id="@+id/ETProjectDesc"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>