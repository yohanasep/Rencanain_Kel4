<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B">

    <ImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/logo_foreground"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="76dp"></ImageView>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rencanain"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="97dp"></TextView>

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:backgroundTint="#FFFFFF"
        android:padding="8dp"
        android:text="Lanjutkan dengan Google"
        android:textColor="#000000"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="177dp"></Button>

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#FFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="255dp"></TextView>

    <EditText
        android:id="@+id/addEmail"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Masukkan alamat email kamu"
        android:textColorHint="#FFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="289dp"></EditText>

    <EditText
        android:id="@+id/addKode"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Masukkan kode masuk"
        android:textColorHint="#FFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="414dp"></EditText>

    <TextView
        android:id="@+id/labelKode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode"
        android:textColor="#FFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="379dp"></TextView>

    <Button
        android:id="@+id/btnMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="Masuk"
        android:textColor="#1C1C1C"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="525dp"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>
