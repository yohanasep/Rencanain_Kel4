<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Cover Image -->
    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/cover_image"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imgProfile" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imgCover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardProjects" />

    <!-- Projects Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProjects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#333333"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/labelProjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Projekku"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/HDProjects"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#555555"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelProject1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project 1"
                    android:textColor="#CCCCCC"
                    android:drawableLeft="@drawable/ic_project"
                    android:drawablePadding="8dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp" />

                <!-- Tambahkan TextView atau item proyek lain di sini -->

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Schedule Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSchedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#333333"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardProjects"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/labelSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwalku"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/HDSchedule"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#555555"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/labelSchedule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 Oktober 10:00 PM\nMenamatkan tugas besar pemmob"
                android:textColor="#CCCCCC"
                android:drawableLeft="@drawable/ic_schedule"
                android:drawablePadding="8dp"
                android:paddingVertical="8dp"
                android:textSize="14sp" />

            <!-- Tambahkan TextView atau item jadwal lain di sini -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#333333"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
