<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Rencanain"
    tools:context=".jadwalku.MyScheduleDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
            android:gravity="end">

        <ImageButton
            android:id="@+id/btnEditSchedule"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_edit_24"/>

        <ImageButton
            android:id="@+id/btnDeleteSchedule"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_outline_24"/>
    </LinearLayout>
        <!-- Jadwal End -->

        <!-- Due Date Start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelScheduleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Jadwal"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelScheduleStatus"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dueDateLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dueDateLabel"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/labelTenggat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024/10/27" />

        </LinearLayout>
        <!-- Due Date End -->

        <!-- Status Start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelLevelPrioritass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/labelScheduleLevelPrioritas"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/labelLevelPrioritas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

        </LinearLayout>
        <!-- Status End -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Deskripsi :" />

        <TextView
            android:id="@+id/labelScheduleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnTandaiSelesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tandai Selesai" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
