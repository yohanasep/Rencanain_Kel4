<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Rencanain"
    tools:context=".workspace.ProjectListActivity">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="@string/labelProjekku" />

        <SearchView
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBEBEB"
            android:queryHint="Cari projek"
            android:radius="2dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProject"
            android:layout_width="match_parent"
            android:layout_height="528dp"
            android:layout_margin="8dp"
            tools:listitem="@layout/row_project" />
    </LinearLayout>

    <include layout="@layout/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>